{
  "manifest_version": 3,
  "name": "SFVibe - Docsend to PDF",
  "version": "1.0.0",
  "description": "Capture DocSend presentations page by page and compile them into a single PDF download.",
  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "https://docsend.com/*",
    "https://*.docsend.com/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://docsend.com/view/*",
        "https://*.docsend.com/view/*"
      ],
      "js": ["lib/pdf-lib.min.js", "content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none';"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
